#include <iostream>

using namespace std;

int main(){
    int year,leapyear;
    cout<<"输入一个年份:";
    cin>>year;
    
    if (year<0){
        printf("年份输入错误，重新输入");
        
    }else{
        if(year % 400 == 0){
            cout<<year<<" 此年份是闰年";
        }else if(year % 100 ==0){
            cout<<year<<"此年份不是闰年";
        }else if(year % 4 ==0){
            cout<<year<<"此年份不是闰年";
        }
        else 
        cout<<year<<" 此年份不是闰年";
    }
    
    return 0;
}
